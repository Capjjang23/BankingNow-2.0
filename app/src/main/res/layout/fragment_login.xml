<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dialog_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainWhite">

        <TextView
            android:id="@+id/tv_remit_password_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="206dp"
            android:fontFamily="@font/nanum_gothic_bold"
            android:text="간편 비밀번호를 입력해주세요"
            android:textColor="@color/mainBlack"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_remit_password_info">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_pw1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="37dp"
                app:srcCompat="@drawable/circle" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_pw2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="37dp"
                app:srcCompat="@drawable/circle" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_pw3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="37dp"
                app:srcCompat="@drawable/circle" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_pw4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="37dp"
                app:srcCompat="@drawable/circle" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_pw5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="37dp"
                app:srcCompat="@drawable/circle" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_pw6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="37dp"
                app:srcCompat="@drawable/circle" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>